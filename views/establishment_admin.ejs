<% docs.forEach((doc) => { %>
    <% if(doc.sendMail) { %>
    <form method="post" action="/admins/establishmentAdmin/send/<%= doc.userId %>" id="<%= doc.userId %>">
        <tr>
        <td><input type="checkbox" name="<%= doc.userId %>" value="true" /></td>
        <td><%= doc.userId %></td>
        <!-- <td><%= doc.Remarks %></td> -->
        <% if (!doc.sent) { %>
            <td><button class="btn" type="submit" onclick="onClickHandler('<%= doc.userId %>')">send</button></td>
        <% } else { %> 
            <td><button class="btn" disabled type="submit" onclick="onClickHandler('<%= doc.userId %>')">send</button></td>
        <% } %>
        </tr>
    </form>
    <% } %>
    <% }) %>
