<h2>add to list</h2>
   
<table>
    <tr>
        <th></th>
        <th>Registration ID</th>
        <th>Gender</th>
        <th>Post Applied</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>

    <% docs.forEach((doc) => { %>
        <% if(!doc.tick) { %>
    <tr>
        <td><%= doc.userId %></td>
        <td><%= doc.gender %></td>
        <td><%= doc.postApplied %></td>
        <td><%= doc.name %></td>
        <td><textarea name="<%= doc._id %>" placeholder="Remarks"></textarea></td>
        <td><a class="btn" target="_blank" href="/admins/userdetail/<%= doc._id %>">view</a></td>
        <form method="post" action="/admins/hodAdmin/add/<%= doc.userId %>" id="<%= doc.userId %>">
            <td><button class="btn" type="submit" onclick="onClickHandler('<%= doc.userId %>')">add</button></td>
        </form>
    </tr>
    <% } %>
    <% }) %>

  
</table>
    <br><br>

    <h2>remove from list</h2>
   
<table>
    <tr>
        <th></th>
        <th>Registration ID</th>
        <th>Gender</th>
        <th>Post Applied</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>

    <% docs.forEach((doc) => { %>
        <% if(doc.tick) { %>
    <tr>
        <td><%= doc.userId %></td>
        <td><%= doc.gender %></td>
