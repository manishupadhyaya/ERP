<h1 class="mt-4">HOD Admin Section</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<h2>Tick out the eligible ones</h2>
<form method="post" action="/admins/hodAdmin">
   
<table>
    <tr>
        <th></th>
        <th>Registration ID</th>
        <th>Gender</th>
        <th>Post Applied</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
    
    <% docs.forEach((doc) => { %>
    <tr>
        <td><input type="checkbox" name="<%= doc.userId %>" value="true" /></td>
        <td><%= doc.userId %></td>
        <td><%= doc.gender %></td>
        <td><%= doc.postApplied %></td>
        <td><%= doc.name %></td>
        <td><textarea name="<%= doc._id %>" placeholder="Remarks"></textarea></td>
        <td><a target="_blank" href="/admins/userdetail/<%= doc._id %>">view</a></td>
    </tr>
        <% }) %>
</table>
    <br><br>
    <p>Send list to the establishment section</p>
    <button type="submit">Submit</button>
</form>
<a href="/admins/logout" class="btn btn-secondary">Logout</a>
