<h1 class="mt-4">SUPER Admin Section</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>

<form method="post" action="/admins/superAdmin">
<h2>Eligible as per hod</h2>
<% docs.forEach((doc) => { %>
    <% if(doc.eligibility) { %>
    <input type="checkbox" name="<%= doc.userID %>" value="false" />Move to rejected candidates list<br>
    <h3><%= doc.userID %></h3>
    <a href="/admins/<%= doc._id %>">view</a><br>
    <% } %>
    <% }) %>

    <br>
    <br>
<h2>Not Eligible as per hod</h2>
<% docs.forEach((doc) => { %>
    <% if(!doc.eligibility) { %>
    <input type="checkbox" name="<%= doc.userID %>" value="true" />Move to selected candidates list<br>
    <h3><%= doc.userID %></h3>
    <a href="/admins/<%= doc._id %>">view</a><br>
    <% } %>
    <% }) %>  
    <br><br>

    <p>Send final list to the establishment section</p>
    <button type="submit">Send</button>
</form>
<a href="/admins/logout" class="btn btn-secondary">Logout</a>
