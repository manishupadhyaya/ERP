<h1 class="mt-4">SUPER Admin Section</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>

<button><a href="/admins/superAdmin/panel">interview panel</a></button>
<button><a href="/admins/superAdmin/finalList">final list</a></button>

<form method="post" action="/admins/superAdmin">
<h2>Eligible as per hod</h2>
<table>
    <tr>
        <th></th>
        <th>Registration ID</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
        <% docs.forEach((doc) => { %>
            <% if(doc.eligibility) { %>
        <tr>
            <td><input type="checkbox" name="<%= doc.userId %>" value="false" />Move to rejected candidates list</td>
            <td><%= doc.userId %></td>
            <td><%= doc.name %></td>
            <td><%= doc.Remarks %></td>
            <td><a target="_blank" href="/admins/userdetail/<%= doc._id %>">view</a></td><br>
        </tr>
            <% } %>
        <% }) %>
</table>

    <br>
    <br>
<h2>Not Eligible as per hod</h2>
<table>
        <tr>
            <th></th>
            <th>Registration ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
            <% docs.forEach((doc) => { %>
                <% if(!doc.eligibility) { %>
            <tr>
                <td><input type="checkbox" name="<%= doc.userId %>" value="true" />Move to selected candidates list</td>
                <td><%= doc.userId %></td>
                <td><%= doc.name %></td>
                <td><%= doc.Remarks %></td>
                <td><a target="_blank" href="/admins/userdetail/<%= doc._id %>">view</a></td><br>
            </tr>
                <% } %>
            <% }) %>
    </table>
    <br><br>

    <p>Send final list to the establishment section</p>
    <button type="submit">Send</button>
</form>

    
