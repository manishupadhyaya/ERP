                                        <option>...</option>
                                    </select>
                                </div>
                                <div class="form-group col-lg-10 col-md-10">
                                    <label for="country">ix. Country</label>
                                    <input type="text" class="form-control" id="country" name="countryResidential" value="<%= doc.countryResidential %>" >
                                </div>
                                <div class="form-group col-lg-10 col-md-10">
                                    <label for="pin">ix. Pin Code</label>
                                    <input type="number" class="form-control" id="pin" name="pincodeResidential" value="<%= doc.pincodeResidential %>" >
                                </div>
                            </div>

                        </div>
