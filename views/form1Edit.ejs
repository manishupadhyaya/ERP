                                <div class="row">
                                    <legend class="col-form-label col-lg-4 col-md-10 col-sm-6">G. Gender</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender" value="<%= doc.gender %>"  id="gridRadios1"
                                                value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Male
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gender"  value="<%= doc.gender %>" id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                Female
                                            </label>
                                        </div>
                                        <div class="form-check disabled">
                                            <input class="form-check-input" type="radio" name="gender"  value="<%= doc.gender %>" id="gridRadios3"
                                                value="option3">
                                            <label class="form-check-label" for="gridRadios3">
                                                Others
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-group col-lg-10 col-md-10">
                                <label for="dob">H. DOB</label>
                                <input type="date" class="form-control" name="DOB" value="<%= doc.DOB %>"  id="dob">
                            </div>
                            <div class="form-group col-lg-10 col-md-10">
                                <label for="age">I. Age as on (30/11/2017)</label>
                                <input type="text" class="form-control" name="age"  value="<%= doc.age %>" id="age">
                            </div>
                            <fieldset class="form-group col-lg-10 col-md-10">
                                <div class="row">
                                    <legend class="col-form-label col-lg-4 col-md-10 col-sm-6 ">J. Marital Status</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="maritalStatus"  value="<%= doc.maritalStatus %>" id="gridRadios1"
                                                value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Married
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="maritalStatus"  value="<%= doc.maritalStatus %>" id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                Unmarried
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="form-group col-lg-10 col-md-10">
                                <div class="row">
                                    <legend class="col-form-label col-lg-4 col-md-10 col-sm-6 ">K. Category</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="category" value="<%= doc.category %>"  id="gridRadios1"
                                                value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                General
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="category"  value="<%= doc.category %>" id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                OBC
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="category"  value="<%= doc.category %>" id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                SC
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="category"  value="<%= doc.category %>" id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                ST
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="form-group col-lg-10 col-md-10">
                                <div class="row">
                                    <legend class="col-form-label col-lg-4 col-md-10 col-sm-6 ">L. PWD</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="pwd"  value="<%= doc.pwd %>" id="gridRadios1"
                                                value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Yes
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="pwd" value="<%= doc.pwd %>"  id="gridRadios2"
                                                value="option2">
                                            <label class="form-check-label" for="gridRadios2">
                                                No
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-group col-lg-10 col-md-10">
                                <label for="dis">M. % of Disability</label>
                                <input type="text" class="form-control" name="disability"  value="<%= doc.disability %>" id="dis">
                            </div>
                        </div>
